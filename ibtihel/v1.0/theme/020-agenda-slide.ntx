@define agenda-slide(title,subtitle:"",subsubtitle:"",author:"",email:"",date:"",version:"",affiliation:""){
    page{
         polygon(points:[(30,0),(100,0),(100,100),(10,100)],background-color:documentColors[2])
         polygon(points:[(27,0),(30,0),(10,100),(7,100)],background-color:documentColors[1])
         text("${title}",
            position:(35,5)
            font-size:10%P,
            color:documentColors[3],
            font-bold
            shadow:(shift:(0,0.2))
         )
            styles:{
                "*":{
                    color:white
                }
            }

        @define body{
            group(
                    position : (25,22),
                    size     : (98,72),
                    origin : top-left,
                    font-size: 5%P,
                    color: "#6b3a09",
                    font-bold
            ){
                styles:{
                    "*" :{
                        foreground-color:dark-gray
                        color:white
                    }
                }
                componentBody
            }
        }
        componentBody
    }
}
