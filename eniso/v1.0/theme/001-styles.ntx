import(
    "net.thevpc.ntexup:ntexup-extension-plantuml:0.8.7.0"
    "net.thevpc.ntexup:ntexup-extension-animated-gif:0.8.7.0"
    "net.thevpc.ntexup:ntexup-extension-svg:0.8.7.0"
    "net.thevpc.ntexup:ntexup-extension-shapes2d:0.8.7.0"
    "net.thevpc.ntexup:ntexup-extension-shapes3d:0.8.7.0"
    "net.thevpc.ntexup:ntexup-extension-plot2d:0.8.7.0"
    "net.thevpc.ntexup:ntexup-extension-presenters:0.8.7.0"
    "net.thevpc.ntexup:ntexup-extension-latex:0.8.7.0"
)

themeShowPalette:=false
documentColorAccent:=1
//documentColors:=arrayLeftRotate(["#26355D","#AF47D2","#DE3163","#1d8147","#FF8F00","#FF7F50","#FFBF00","#FFDB00","#9FE2BF","#40E0D0","#CCCCFF","#6495ED"],either((documentColorAccent - 1),0))
documentColors:=arrayLeftRotate(["#003552","#9d3326","#80bad3","GRAY_78","#FF8F00","#FF7F50","#FFBF00","#FFDB00","#9FE2BF","#40E0D0","#CCCCFF","#6495ED"],either((documentColorAccent - 1),0))



styles:{
    "*" : {
        font-size : 5%P
        debug-color: red,
        font-family : "Serif",
    }

    source : {
        font-size : 3%P,
        font-family : "monospaced",
        source-primary-color: documentColors
        source-keyword-color: documentColors[1]
        source-separator-color: documentColors[6]
        source-string-color: documentColors[4]
        source-comments-color: documentColors[12]
        source-number-color: documentColors[3]
        source-keyword-font-bold,
        //draw-contour,

    }

    page: {
        background:Gray93
    }

    .ul-item:{
        margin : (5,0)
        at:left,
    }
    .ul-bullet:{
        background: documentColors[1]
        at:left,
        size:3%P
    }
    .ol-bullet:{
        color: documentColors[2]
        at:center,
    }
    .ol-item:{
        at:left,
    }
    ellipse:{
        at:center,
    }
    arc:{
        at:center,
    }

    .image-fig:{
        margin: 1
    }
    .image-fig-legend:{
        at:bottom
        font-size:2%P
        margin:(1,1,1,2)
    }
    .image-fig-title:{
        at:top
        font-size:2%P
        color:gray35
    }
}

